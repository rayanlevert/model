{
    "name": "rayanlevert/model",
    "description": "Dependecy-free model abstraction (M in MVC), interface for accessing databases in PHP",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "php",
        "model",
        "mvc",
        "framework"
    ],
    "support": {
        "issues": "https://github.com/rayanlevert/model/issues"
    },
    "authors": [
        {
            "name": "Rayan Levert",
            "email": "rayanlevert@msn.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "RayanLevert\\Model\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RayanLevert\\Model\\Tests\\": "tests/"
        }
    }
}